@model MVCAjax.Models.ViewAlbumPhoto

@{
    var ajaxOption = new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "content"
    };
}

@using (Ajax.BeginForm("AddPhotoToAlbum", ajaxOption))
{
    foreach (var photo in Model.Photos)
    {
        <div>
            <img src="/Image/@photo.PhotoName" />
            <input type="checkbox" name="photos[]" value="@photo.PhotoID" />
        </div>
    }
    <select name="albumID">
        @foreach (var album in Model.Albums)
        {
            <option value="@album.AlbumID">@album.AlbumName</option>
        }
    </select>
    <input type="submit" value="Add To Album" class="btn btn-default" />
}



