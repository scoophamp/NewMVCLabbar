
@{
    ViewBag.Title = "UploadPicture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UploadPicture</h2>
<div id="imgSpinner1" style="display:none">
    <img src="~/Image/SpinnerImage/ajax-loader.gif" />
</div>
@using (Html.BeginForm("UploadPicture",
                                                            "Gallery",
                                                            FormMethod.Post,
                                                            new { enctype = "multipart/form-data", id = "uploadpicture" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label>Upload Photo</label>
        <div>
            <input type="file" name="files" id="file" multiple="multiple" />
            @Html.ValidationMessage("error")
            <input type="text" name="comment" id="comment" />
        </div>
    </div>
    <div>
        <div>
            <input type="submit" value="Create" id="btnAddPhoto" />
        </div>
    </div>
}

@section scripts {
    <script src="~/scripts/MyMain.js"></script>
}